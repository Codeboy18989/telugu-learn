rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Parent users collection
    match /parents/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Kids subcollection
      match /kids/{kidId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Game progress subcollection
        match /gameProgress/{progressId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }

        // Stats subcollection (for streaks, achievements, etc.)
        match /stats/{statId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }

        // Progress subcollection (for existing learning content)
        match /progress/{progressId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }

    // Content collection (for Telugu learning content)
    match /content/{contentId} {
      // Everyone can read content
      allow read: if request.auth != null;
      // Only authenticated users with isSuperAdmin custom claim can write
      allow write: if request.auth != null &&
                      request.auth.token.isSuperAdmin == true;
    }
  }
}
