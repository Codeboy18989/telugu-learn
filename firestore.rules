rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // NEW STRUCTURE: Users collection (multi-user system)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User profile with mode settings
      match /profile/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Learners subcollection (replaces kids)
      match /learners/{learnerId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Game progress subcollection
        match /gameProgress/{progressId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }

        // Stats subcollection (for streaks, achievements, etc.)
        match /stats/{statId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }

        // Progress subcollection (for learning content)
        match /progress/{progressId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      // Invites subcollection (for friends mode)
      match /invites/{inviteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // OLD STRUCTURE: Keep for backward compatibility (will be deprecated)
    match /parents/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Kids subcollection
      match /kids/{kidId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Game progress subcollection
        match /gameProgress/{progressId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }

        // Stats subcollection (for streaks, achievements, etc.)
        match /stats/{statId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }

        // Progress subcollection (for existing learning content)
        match /progress/{progressId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }

    // Content collection (for Telugu learning content)
    match /content/{contentId} {
      // Everyone can read content
      allow read: if request.auth != null;
      // Only authenticated users with isSuperAdmin custom claim can write
      allow write: if request.auth != null &&
                      request.auth.token.isSuperAdmin == true;
    }
  }
}
